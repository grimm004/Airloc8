<Window x:Class="LocationInterface.Windows.VendorAnalysisWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        SizeToContent="WidthAndHeight"
        Title="Vendor Analysis">
    
    <Grid>
        <Button x:Name="startAnalysisButton" Content="Start Analysis" HorizontalAlignment="Stretch" Margin="10,10,10,10" VerticalAlignment="Top" Click="StartButtonClick"/>
        <ProgressBar x:Name="analysisProgressBar" HorizontalAlignment="Stretch" Height="10" Margin="10,35,10,10" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
