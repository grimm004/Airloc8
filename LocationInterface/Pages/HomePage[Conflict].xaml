<Page x:Class="LocationInterface.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="Home" Height="160">

    <Grid>
        <Button x:Name="importFolderButton" Content="Import Folder" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Width="101" Click="ImportDataFileClick" Height="50"/>
        <Label Content="Location Service Analysis" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="48" Margin="0,-10,0,0"/>
        <ProgressBar x:Name="statusProgressBar" HorizontalAlignment="Left" Height="14" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="100" VerticalContentAlignment="Center"/>
        <Label x:Name="statusLabel" Content="Ready" HorizontalAlignment="Left" Margin="110,0,0,0" RenderTransformOrigin="0.2,-4.3" VerticalContentAlignment="Center" Height="33" VerticalAlignment="Bottom" Width="416"/>
        <Button x:Name="importedDataFileViewButton" Content="View Imported Files" HorizontalAlignment="Left" Margin="116,69,0,0" VerticalAlignment="Top" Width="128" Height="50" Click="ViewImportedFilesClick"/>

    </Grid>
</Page>
