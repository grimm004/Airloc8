<Page x:Class="LocationInterface.Pages.MapViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LocationInterface.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="MapViewPage">

    <Grid>
        <Canvas x:Name="canvas" Width="300" Panel.ZIndex="-10" Margin="0,20,0,0"/>
        <Button x:Name="backButton" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="130" Click="BackButton_Click"/>
        <ComboBox x:Name="deckSelectionComboBox" HorizontalAlignment="Left" Margin="130,0,0,0" VerticalAlignment="Top" Width="170" SelectionChanged="DeckSelectionComboBox_SelectionChanged" Height="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <ComboBoxItem>Deck 1</ComboBoxItem>
            <ComboBoxItem>Deck 2</ComboBoxItem>
            <ComboBoxItem>Deck 3</ComboBoxItem>
            <ComboBoxItem IsSelected="True">Deck 4</ComboBoxItem>
            <ComboBoxItem>Deck 5</ComboBoxItem>
            <ComboBoxItem>Deck 6</ComboBoxItem>
            <ComboBoxItem>Deck 7</ComboBoxItem>
            <ComboBoxItem>Deck 8</ComboBoxItem>
            <ComboBoxItem>Deck 9</ComboBoxItem>
            <ComboBoxItem>Deck 10</ComboBoxItem>
            <ComboBoxItem>Deck 11</ComboBoxItem>
        </ComboBox>

    </Grid>
</Page>
