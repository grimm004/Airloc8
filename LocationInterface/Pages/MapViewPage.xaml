<Page x:Class="LocationInterface.Pages.MapViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="MapViewPage">

    <Grid>
        <Canvas x:Name="canvas" Margin="0,0,20,0" Focusable="True" FocusVisualStyle="{x:Null}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        <Button x:Name="backButton" Content="Back" Margin="0,0,0,0" Width="50" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Click="BackButtonClick"/>
        <ComboBox
            ItemsSource="{Binding ImageFiles, Mode=OneWay}"
            DisplayMemberPath="Identifier"
            Margin="50,0,0,0" Width="100"
            Height="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            SelectionChanged="DeckSelectionComboBoxSelectionChanged"/>
        <TextBox Margin="150,0,0,0" Width="100" Height="20" Text="{Binding SelectedMacAddress}" TextChanged="MacAddressEntryTextChanged" HorizontalAlignment="Left" VerticalAlignment="Bottom" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
    </Grid>
</Page>
